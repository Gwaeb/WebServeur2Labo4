<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<h1>Les recettes de <%= current_user.email %></h1>

<% if current_user.recettes.length != 0 %>
    <ul>
        <% current_user.recettes.each do |recette| %>
        <li>
            <a target=_blank href=mesrecettes/<%= recette.id %>/><%= recette.titre %></a>
        </li>
        <% end %>
    </ul>

<% else %>
    <h3>Vous n'avez pas de recette</h3>
<% end %>
